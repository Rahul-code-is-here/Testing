@* @model ForgotPasswordViewModel; *@


<h1>@ViewData["Title"]</h1>

@model PizzaShop.Domain.ViewModels.ForgotPasswordModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>forgotPassword</title>


    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <partial name="_Toaster.cshtml" ></partial>
    <div class="container-fluid">
        <div class="row full-height">
            <!-- Left Section with Image -->
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-0 full-height image-half">
                <img src="~/images/dominos_background.jpg" class="img-fluid w-100 h-100" alt="PizzaShop Background"
                    style="object-fit: cover;">
            </div>

            <!-- Right Section with Login Form -->
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center full-height content-half"
                style="background-color: #d8e8f8;">
                <div class="w-75">

                    <!-- Logo and Title -->
                    <div class="text-center mb-4">
                        <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" class="img-fluid" width="50"
                            height="50">
                        <h1 class="text-primary m-0">PIZZASHOP</h1>
                    </div>


                    <h3 class="mb-4 text-left">Forgot Password</h3>

                    <!-- Login Form -->
                    <form id="loginForm" asp-controller="Login" asp-action="Forgot" method="post">

                        <!-- Email Input -->
                        <div class="mb-3  form-floating">
                            <input type="email" class="form-control" id="email" name="email" asp-for="Email"
                                placeholder="Email">
                            <label class="w-100" for="floatingInput">
                                <div class="d-flex justify-content-between">
                                    <div>Email address*</div>
                                </div>
                            </label>
                            <div style="position: absolute; right: 12px; top: 15px ;">
                                <img src="~/images/Default_pfp.svg.png" height="24px" width="24px" alt="User Icon">
                            </div>

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        @* <div class="form-floating input_item mb-3">
                        <input type="email" class="form-control" id="email" style=" position: relative;;"
                        placeholder="name@example.com" asp-for="Email">
                        <label class="w-100" for="floatingInput">
                        <div class="d-flex justify-content-between">
                        <div>Email address*</div>
                        </div>
                        </label>
                        <div style="position: absolute; right: 12px; top: 15px ;">
                        <img src="~/images/Default_pfp.svg.png" height="24px" width="24px" alt="User Icon">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        </div> *@


                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Send</button>
                        </div>
                        <div class="d-flex align-items-center justify-content-center">
                            <a asp-controller="Login" asp-action="Login" class="mt-2"
                                style="text-decoration: none;">Back to login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="js/bootstrap.bundle.min.js"></script>
</body>

</html>