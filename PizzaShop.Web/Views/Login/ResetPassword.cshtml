<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ResetPassword</title>


    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
  
<body>
    <partial name="_Toaster.cshtml" ></partial>
<div class="container-fluid">
     
    <div class="row full-height">
        <!-- Left Section with Image -->
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center p-0 full-height image-half">
            <img src="~/images/dominos_background.jpg" class="img-fluid w-100 h-100" alt="PizzaShop Background"
                style="object-fit: cover;">
        </div>

        <!-- Right Section with Login Form -->
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center full-height content-half"
            style="background-color: #d8e8f8;">
            <div class="w-75">

                <!-- Logo and Title -->
                <div class="text-center mb-4">
                    <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" class="img-fluid" width="50"
                        height="50">
                    <h1 class="text-primary m-0">PIZZASHOP</h1>
                </div>

                <!-- Welcome Message -->
                <h3 class="mb-4 text-left">Welcome,</h3>

                <!-- Reset password Form -->
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                
                    <div class="form-floating mt-4">
                        <input style="position: relative;" type="password" class="form-control" id="password"
                            placeholder="Password" asp-for="NewPassword">
                        <i class="far fa-eye toggle-password" data-target="confirmpassword"
                            style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <label for="floatingPassword">New Password*</label>
                    </div>
                  
                    <div class="form-floating mt-4">
                        <input style="position: relative;" type="password" class="form-control" id="password"
                            placeholder="Password" asp-for="ConfirmPassword">
                        <i class="far fa-eye toggle-password" data-target="confirmpassword"
                            style=" cursor: pointer; position: absolute;  right: 12px; margin-top: -37px;"></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <label for="floatingPassword">confirmpassword*</label>
                    </div>

                    <div class="form-floating text-center mt-4">
                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                        <a type="submit" href="/Login" class="btn text-primary w-100 mt-2">Back to login</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toggle-password").forEach(icon => {
            icon.addEventListener("click", function () {
                const targetId = this.getAttribute("data-target");
                const passwordField = document.getElementById(targetId);

                // Toggle password visibility
                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    this.classList.remove("fa-eye");
                    this.classList.add("fa-eye-slash");
                } else {
                    passwordField.type = "password";
                    this.classList.remove("fa-eye-slash");
                    this.classList.add("fa-eye");
                }
            });
        });
    });
</script>

});
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
