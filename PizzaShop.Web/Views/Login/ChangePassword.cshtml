@model PizzaShop.Domain.ViewModels.ChangePasswordModel


<div class="d-flex mt-3 p-3 justify-content-between">
    <div class="h2 blue-color"><strong>Change Password</strong></div>
</div>
<small class="sidebar-name">Enter a new password to update your account credentials</small>
<form asp-action="ChangePassword" class="w-25" method="post">
    <div class="form-group form-floating  mt-2">
        <input  style="width: 390px; position: relative;" asp-for="CurrentPassword" type="password" class="form-control" id="currentPassword" required />
         <i class="far fa-eye toggle-password" data-target="currentPassword"
                style="cursor: pointer; position: absolute; left: 335px; top: 50%; transform: translateY(-50%);"></i>
        <label for="currentPassword">Current Password</label>
    </div>
    <span asp-validation-for="CurrentPassword" class="text-danger"></span>

    <div class="form-group mt-2  form-floating">
        <input asp-for="NewPassword" type="password" style="width: 390px; position: relative;" class="form-control" id="NewPassword" required />
         <i class="far fa-eye toggle-password" data-target="NewPassword"
                style="cursor: pointer; position: absolute; left: 335px; top: 50%; transform: translateY(-50%);"></i>
        <label for="NewPassword">New Password</label>
    </div>
    <span asp-validation-for="NewPassword" class="text-danger"></span>

    <div class="form-group mt-2 form-floating">
        <input asp-for="ConfirmPassword" type="password" style="width: 390px; position: relative;" class="form-control" id="ConfirmPassword" required />
         <i class="far fa-eye toggle-password" data-target="ConfirmPassword"
                style="cursor: pointer; position: absolute; left: 335px; top: 50%; transform: translateY(-50%);"></i>
        <label for="ConfirmPassword">Confirm Password</label>
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

     <div class="mt-3">
            <button type="submit" class="btn navbar-color text-white">Submit</button>
            <button type="button" class="btn btn-secondary ms-1">Cancel</button>
        </div>

  
</form>




<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toggle-password").forEach(icon => {
            icon.addEventListener("click", function () {
                const targetId = this.getAttribute("data-target");
                const passwordField = document.getElementById(targetId);

                // Toggle password visibility
                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    this.classList.remove("fa-eye");
                    this.classList.add("fa-eye-slash");
                } else {
                    passwordField.type = "password";
                    this.classList.remove("fa-eye-slash");
                    this.classList.add("fa-eye");
                }
            });
        });
    });
</script>



@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}
